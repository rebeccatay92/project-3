    <%= f.hidden_field :txn_type, value: 1 %>
      <%= f.label :Units %>
      <%= f.number_field :units, :class => 'text_field', :step => 0.01, :min => '%.2f'% (1/@priceLTC), :max => '%.2f'% (current_user.credits_remaining/@priceLTC), :required => true %>
