    <%= f.hidden_field :amount_unit, value:'%.2f' % (@priceDASH*1.01) %>
    <%= f.hidden_field :txn_type, value: 1 %>
      <%= f.label :Units  %>
      <%= f.number_field :units, :class => 'text_field', :step => 0.01, :min => 0.01, :max => '%.2f'% (current_user.credits_remaining/@priceDASH), :required => true %>
      <%= f.submit "Buy" %>
    <% end %>

